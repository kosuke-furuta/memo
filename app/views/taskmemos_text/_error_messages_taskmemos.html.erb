<% if @taskmemo.errors.any? %>  
  <div id="error_explanation">
    <div class="alert alert-danger">
      このフォームには <%= pluralize(@taskmemo.errors.count, "error") %>.
    </div>
    <ul>
    <% @taskmemo.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
